{
  "name": "tms",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:expo": "turbo run dev --filter=frontend",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "turbo run typecheck",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "db:migrate": "pnpm -C packages/db migrate:up",
    "db:codegen": "pnpm -C packages/db codegen",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --parallel",
    "test:coverage": "turbo run test:coverage",
    "test:api": "turbo run test --filter=@tms/api",
    "test:frontend": "turbo run test --filter=@tms/frontend",
    "test:packages": "turbo run test --filter='./packages/*'"
  },
