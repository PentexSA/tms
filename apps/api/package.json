{
  "name": "@tms/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "bun --env-file=../../.env run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun run dist/index.js",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/eden": "catalog:",
    "@elysiajs/swagger": "1.2.2",
    "@sinclair/typebox": "0.34.41",
    "@tms/config": "workspace:*",
    "@tms/db": "workspace:*",
    "dotenv": "16.4.7",
    "elysia": "catalog:"
  },
  "devDependencies": {
    "@tms/test-config": "workspace:*",
    "bun-types": "1.2.5",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
