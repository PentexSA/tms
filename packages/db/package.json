{
  "name": "@tms/db",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "migrate:up": "tsx src/migrate.ts up",
    "migrate:down": "tsx src/migrate.ts down",
    "codegen": "kysely-codegen --out-file src/types.ts --dialect postgres --url postgres://postgres:postgres@localhost:5432/tms",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "kysely": "0.27.5",
    "pg": "8.14.0",
    "@tms/config": "workspace:*"
  },
  "devDependencies": {
    "@tms/test-config": "workspace:*",
    "@tms/tsconfig": "workspace:*",
    "@types/pg": "8.11.10",
    "kysely-codegen": "0.19.0",
    "tsx": "4.19.2",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
